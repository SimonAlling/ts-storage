{
  "name": "ts-storage",
  "version": "5.0.0",
  "description": "Type-safe storage library with fallback values",
  "keywords": [
    "type-safe",
    "localStorage",
    "fallback",
    "default",
    "TypeScript"
  ],
  "author": {
    "name": "Simon Alling",
    "email": "alling.simon@gmail.com",
    "url": "https://simonalling.se"
  },
  "license": "MIT",
  "homepage": "https://github.com/simonalling/ts-storage",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonalling/ts-storage"
  },
  "bugs": {
    "url": "https://github.com/simonalling/ts-storage"
  },
  "sideEffects": false,
  "main": "dist/index",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint --project .",
    "test": "jest",
    "build": "npm run clean && tsc -d -p . && npm run rename && tsc --module CommonJS -p .",
    "clean": "rm -rf dist/*",
    "prepublishOnly": "npm run build && npm test",
    "rename": "renamer --force --find \"/\\.js$/\" --replace \".mjs\" \"dist/**\"",
    "verify": "npm run build && npm run lint"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "ts-type-guards": "^0.6.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.11",
    "jest": "^23.6.0",
    "renamer": "^1.1.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2"
  }
}
